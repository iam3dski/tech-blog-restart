<div> 

<div class="col mb-5 post">
  <div class="post-header">
    <div>
      <a class="no-button" href="/post/{{id}}">{{title}}</a> 
    </div>
    <div style="text-align: end;">
      Posted by {{user.name}} on {{format_date date_created}}
    </div>
  </div>
  <div class="post-content">
     <p>
      {{description}}
    </p>
  </div>
</div>
<div class="access-border">
<div class="post-header"></div> 
<div class="access-login">
    
    
    <form class="form comment-form">
     
        <label for="Comment">Comment</label>
        <textarea class="form-input" data-uid="{{user_id}}" data-bid="{{id}}" type="text" rows="3" id="Comment"></textarea>

         <div class="form-group">
        <button class="btn-access btn btn-primary" type="submit">Comment!</button>
        </div>
      </div>
     
     
     
      

      
    </form>
  </div>
  </div>  
</div>


