<div class="col mb-5 post">
  <div class="post-header" >
    <div>
      <a class="no-button" href="/post/{{id}}">{{title}}</a> 
    </div>
    <div style="text-align: end;">
      Posted by {{user.name}} on {{format_date date_created}}
    </div>
  </div>
  <div class="post-content">
     <p>
      {{description}}
    </p>
  </div>
</div>